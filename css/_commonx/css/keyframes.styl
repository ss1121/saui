@keyframes fadeIn 
  from 
    opacity: 0
  to 
    opacity: 1
@keyframes fadeOut 
  from 
    opacity: 1
  to 
    opacity: 0


//从底部弹出
@keyframes slideUp 
  from 
    transform: translate3d(0, 100%, 0)
  to 
    transform: translate3d(0, 0, 0)
@keyframes slideUp2 
  from 
    transform: translate3d(0, 0, 0)
  to 
    transform: translate3d(0, 100%, 0)
//从顶部弹出
@keyframes slideDown 
  from 
    transform: translate3d(0, -100%, 0)
  to 
    transform: translate3d(0, 0, 0)

@keyframes slideHeight
  from 
    max-height: 0
  to 
    max-height: 400px

@keyframes slideHeight2
  from 
    max-height: 400px
  to 
    max-height: 0

//从右边弹出
@keyframes slideRight
  from 
    transform: translate3d(100%, 0, 0);
  to 
    transform: translate3d(0, 0, 0)
//从左边弹出
@keyframes slideLeft
  from 
    transform: translate3d(-100%, 0, 0);
  to 
    transform: translate3d(0, 0, 0)

@keyframes scalePop
  from 
    // transform: translate(-47%, -60%);
    transform: scale(0.97);
  to 
    transform: scale(1)

//load动画
@keyframes loading
  from
    opacity 1
  to
    opacity .2