}
pic-lg-s = {
  width: 150px
  height: 150px
  border-radius: 0
}
pic-sm-s = {
  width: 80px
  height: 80px
  border-radius: 0
}

pic-special-s = {
  width: 400px
  height: 400px
  border-radius: 0
}

