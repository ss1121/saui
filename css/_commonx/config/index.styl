$font-family = "Microsoft yahei", arial, Simsun, sans-serif

//zindex
$zidx-h                   = 99    //tip,屏幕垂直居中
$zidx-m                   = 88    // fixed层 modal?
$zidx-l                   = 77    // 下拉

$zidx-ft                  = 20    // form 提示语，


//字体大小
$size-sm                = 12px    // 行高 18
$size                   = 14px    //用于网站整体字体的大小 行高 20
$size-info              = 18px    //适用于重要文字信息，特殊标签页 行高 24
$size-title-sm          = 16px    //小标题 行高 26
$size-title             = 20px    //大标题 行高 28
$size-title-lg          = 24px    //特殊 行高 32




/*
  距离
*/
$space = 30px
$space-minor = 20px      //比如
$space-small = 10px      //比如按钮之间

$space-dispaly = 10px 20px  //文字 上下左右 比如层里的

$icon-dist = 8px                      //文字与图标之前的距离

//padding  用于框框包住的文字...
$padding = 6px 20px
$padding-sm = 6px $space-small

$ab-tr = {
  top: 6px
  right: $space-small
}

/*
  圆角
*/
$br = 3px
$br-lg = 10px       //列表 modal


/*
  按钮   色值, 大小
*/
$btn-radius = $br
$btn-radius-lg = 20px

//失效
$btn-dislabel-color = #ccc
$btn-dislabel-bgc = $color-bg
$btn-dislabel-bc = $color-line

//背景实色  文字统一白色
$btn-bgc-default = $color-primary     //背景色
$btn-bc-default = $color-primary      //边线

$btn-bgc-primary = $color-aux-primary     //背景色
$btn-bc-primary = $color-aux-primary      //边线
// $btn-c-primary = #fff       //文字色

$btn-bgc-minor = $color-aux-warning     //背景色
$btn-bc-minor = $color-aux-warning      //边线
// $btn-c-minor = #fff       //文字色


//背景是白色    默认背景统一白色  因为色值跟同上 所以无需再写
$btn-bgc-grey = $color-line-input      //边线
$btn-bc-grey = #fff      //文字色


btn-default = {
  // width: 326px
  padding: 0 20px
  line-height: 32px
  font-size: $size
}
btn-lg = {
  padding: 0 50px
  line-height: 50px
  font-size: $size-title
  font-weight: bold
}
btn-sm = {
  padding: 0 12px
  line-height: 24px
  font-size: $size-sm
}
btn-disabled = {
  background: $btn-dislabel-bgc
  border: $btn-dislabel-bc
  color: $btn-dislabel-color
}


//tag
tag-default = {
  padding: 0 5px
  line-height: 16px
  font-size: $size-sm
}
tag-lg = {
  font-size: $size
}




//图片大小
pic-default = {
  width: 100%
  height: auto
}

pic-lg = {
  width: 100%
  height: 214px
}
pic-sm = {
  width: 48%
  height: 186px
}
pic-banner = {
  width: 100%
  height: 340px
}

//正方形图片大小  s代表square正方形
pic-default-s = {
  width: 100px
  height: 100px
